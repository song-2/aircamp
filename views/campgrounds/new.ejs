<% include ../partials/header %>

    <div class = "row">

    <h1 style = "text-align:center;">Create a New Campground</h1>
    <div class="col-md-4 col-md-offset-4">
    <form action = "/campgrounds" method = "POST">
        <div class = "form-group">
          <input class = "form-control" type="text" name = "name" placeholder="name" min="0.01" step="0.01">
        </div>
        <div class = "form-group">
          <input class = "form-control" type="number" name = "price" placeholder = "price">
        </div>
        <div class = "form-group">
          <input class = "form-control" type = "text" name = "image" placeholder = "image url">
        </div>
        <div class = "form-group">
          <input class = "form-control" type = "text" name = "description" placeholder = "description url">
        </div>
        
      <button class = "btn btn-lg btn-primary btn-block">Submit!</button>
    </form>
    </div>
  </div>


<% include ../partials/footer %>